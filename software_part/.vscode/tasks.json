{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "1. Build STM8 Project",
            "type": "shell",
            "command": "${workspaceFolder}\\build.bat",
            "options": {
                "shell": {
                    "executable": "C:\\Windows\\System32\\cmd.exe",
                    "args": ["/d", "/c"]
                }
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": {
                "owner": "cosmic",
                "fileLocation": ["relative", "${workspaceFolder}"],
                "pattern": {
                    "regexp": "^(.*\\.c):(\\d+):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "message": 3
                }
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        },
        {
            "label": "2. Flash STM8 (stlinkv2)",
            "type": "shell",
            "command": "${workspaceFolder}\\flash.bat",
            "options": {
                "shell": {
                    "executable": "C:\\Windows\\System32\\cmd.exe",
                    "args": ["/d", "/c"]
                }
            },
            "group": "test",
            "problemMatcher": [],
            "dependsOn": "1. Build STM8 Project"
        }
    ]
}